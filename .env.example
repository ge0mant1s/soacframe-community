
# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/soacframe_community"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"

# AWS S3 Configuration (Free tier available)
AWS_BUCKET_NAME="your-bucket-name"
AWS_FOLDER_PREFIX="soacframe/"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Abacus AI Configuration (Required for AI features)
ABACUSAI_API_KEY="your-abacus-ai-api-key"

# Optional: Google Analytics (Not required for core functionality)
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# Optional: Google SSO (Not available in Community Edition)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# Application Environment
NODE_ENV="development"

# Community Edition Flags
EDITION="community"
MAX_USERS=5
MAX_DEVICES=50
AI_QUERIES_PER_DAY=10
