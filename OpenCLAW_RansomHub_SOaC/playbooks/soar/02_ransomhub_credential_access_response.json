{
  "name": "RansomHub-Credential-Access-Response",
  "description": "Immediate containment for LSASS dumping and credential theft",
  "trigger": {
    "type": "Sentinel Analytics Rule",
    "rule_name": "RansomHub Credential Access - LSASS Dumping"
  },
  "actions": [
    {
      "step": 1,
      "action": "IsolateDevice",
      "target": "{{ Computer }}",
      "method": "CrowdStrike Contain Host"
    },
    {
      "step": 2,
      "action": "ForcePasswordReset",
      "target": "{{ Account }}",
      "method": "Entra ID Graph API"
    },
    {
      "step": 3,
      "action": "RevokeAllSessions",
      "target": "{{ Account }}",
      "method": "Entra ID Revoke-AzureADUserAllRefreshToken"
    },
    {
      "step": 4,
      "action": "KillProcess",
      "target": "{{ Process }}",
      "method": "CrowdStrike RTR / Defender Live Response"
    },
    {
      "step": 5,
      "action": "CreateIncident",
      "severity": "Critical",
      "title": "RansomHub Credential Theft - {{ Computer }}",
      "assignTo": "CIRT-Lead"
    },
    {
      "step": 6,
      "action": "CollectForensics",
      "artifacts": [
        "memory_dump",
        "process_tree",
        "registry_hive"
      ],
      "method": "CrowdStrike Falcon X / Defender Forensics"
    }
  ],
  "sla": "5 minutes"
}